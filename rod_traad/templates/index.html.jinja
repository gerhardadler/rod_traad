<!DOCTYPE html>
<html lang="no">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/static/images/favicon.ico">
    <link rel="stylesheet" href="/static/style/global.css">
    <link rel="stylesheet" href="/static/style/button.css">
    <link rel="stylesheet" href="/static/style/index.css">
    <script src="/static/script/main.js" defer type="module"></script>
    <title>rod_traad</title>
</head>

<body class="no-animate">
    <main>
        <div class="content">
            <h1>19. april 2025</h1>
            <div id="puzzle" class="fade-in">
                {# <div class="solved solution-1">
                    <h3>Løsning 1</h3>
                    <p>ord1, ord2, ord3, ord4</p>
                </div>
                <div class="solved solution-2">
                    <h3>Løsning 2</h3>
                    <p>ord1, ord2, ord3, ord4</p>
                </div> #}
                {% for row in puzzle.grid %}
                {% set outer = loop %}
                {% for word in row %}
                {% set index = outer.index0 * 4 + loop.index %}
                <label for="word{{ index }}" class="word">
                    <input type="checkbox" class="visually-hidden" id="word{{ index }}" autocomplete="off">
                    <span>{{ word }}</span>
                </label>
                {% endfor %}
                {% endfor %}
            </div>
            <div id="mistakes" class="fade-in">
                <span>Liv igjen:</span>
                <span class="hearts">
                    {% for i in range(1, 5) %}
                    <span class="heart" id="heart{{ i }}">{% include 'snippets/heart-solid.svg.jinja' %}</span>
                    {% endfor %}
                </span>
            </div>
            <button id="submit" class="button neutral">Bekreft</button>
        </div>
    </main>
    <script>
        const puzzleData = JSON.parse('{{ puzzle.model_dump_json() | safe}}');
        const solutions = puzzleData.solutions;
        const puzzleDate = "{{ puzzle_date }}";
    </script>
</body>

</html>